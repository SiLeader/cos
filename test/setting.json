{
  "rules": {
    "debug": [
      {
        "suffix": ".cpp",
        "compiler": "clang++",
        "options": "-std=c++14 -O3"
      }
    ],
    "release": [
      {
        "suffix": ".cpp",
        "compiler": "clang++",
        "options": "-std=c++14 -g3"
      }
    ]
  },
  "target": [
    {
      "directory": ".",
      "priority": 1000,
      "link": {
        "linker": "clang++",
        "options": "",
        "output": "a.elf"
      }
    }
  ],
  "run": "./a.elf"
}